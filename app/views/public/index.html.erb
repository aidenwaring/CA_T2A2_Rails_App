<h1>All Posts</h1>

<% @posts.each do |post|%>
  <div>
      <h2>Title: <%= post.title %></h2> <!--title -->
      <p>Description: <%= post.description %></p> <!-- description -->
      <p>Account Number: <%= post.account_id %></p> <!-- account user name-->
      <% if post.code_image.attached? %> 
        <p>Code: <%= image_tag post.code_image, width: 120 %></p>
      <% end %>
      <% if current_account.has_role?(:admin) %>
        <h1>This is a test for admin</h1>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
      <% end %>
  </div>
<% end %>



<% @accounts.each do |account|%>
  <div>
      <h2><%= account.display_name %></h2> <!--title -->
  </div>
<% end %>